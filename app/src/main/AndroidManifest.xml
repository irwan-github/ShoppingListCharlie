<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mirzairwan.shopping">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mirzairwan.shopping.ShoppingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BuyingActivity"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".data.AndroidDatabaseManager"/>
        <provider
            android:authorities="com.mirzairwan.shopping"
            android:name=".data.ShoppingListProvider"
            android:exported="false" />
    </application>

</manifest>