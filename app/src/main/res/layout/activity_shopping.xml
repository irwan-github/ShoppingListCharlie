<!--
This is the parent screen that pages the 2 child views:
1. To-buy list view (managed by BuyListFragment
2. Catalogue/History View (managed by HistoryFragment)
-->
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/shopping_list_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- The ActionBar displayed at the top -->
                <include
                        layout="@layout/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <android.support.v4.view.ViewPager
                        android:id="@+id/pager_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/toolbar"
                        >

                        <android.support.design.widget.TabLayout
                                android:id="@+id/tab_shopping"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_gravity="top"
                                android:background="@color/colorPrimary"
                                app:tabSelectedTextColor="@color/tabTextColor"
                                app:tabTextColor="@color/tabTextColor"
                                >
                        </android.support.design.widget.TabLayout>
                </android.support.v4.view.ViewPager>

        </RelativeLayout>

        <!-- The navigation drawer that comes from the left -->

        <!-- Note that `android:layout_gravity` needs to be set to 'start' -->
        <android.support.design.widget.NavigationView
                android:id="@+id/nav_drawer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:menu="@menu/drawer"
                >
        </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>