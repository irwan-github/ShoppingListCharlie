<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/prices_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:text="@string/prices_header"
        >
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:background="@android:color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/unit_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_text_padding_top"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginTop="@dimen/edit_text_padding_bottom"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="@string/unit_price_txt"
                android:inputType="numberDecimal"
                android:maxLength="@string/text_price_max_length"
                android:minWidth="@dimen/edit_text_price_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="4.25"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bundle_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unit_price_layout"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="8dp"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_bundle_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="@string/bundle_price_txt"
                android:inputType="numberDecimal"
                android:maxLength="@string/text_price_max_length"
                android:minWidth="@dimen/edit_text_price_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bundle_qty_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unit_price_layout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/keyline_1"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_bundle_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="@string/bundle_quantity_txt"
                android:inputType="numberDecimal"
                android:maxLength="@string/text_bundle_qty_length"
                android:minWidth="@dimen/edit_text_bundle_qty_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


</LinearLayout>