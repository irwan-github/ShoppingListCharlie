<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/prices_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/HeaderFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:text="@string/prices_header"
        >
    </TextView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/currency_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:paddingBottom="@dimen/edit_text_padding_bottom"
        android:paddingTop="@dimen/edit_text_padding_top"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_currency_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/currency_code_txt"
            android:inputType="textCapCharacters"
            android:maxLength="@string/max_currency_len"
            android:minWidth="160dp"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="GBP"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/unit_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="@string/unit_price_txt"
                android:inputType="numberDecimal"
                android:maxLength="@string/text_price_max_length"
                android:minWidth="@dimen/edit_text_price_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="4.25"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/translated_unit_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            android:visibility="invisible"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_translated_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusableInTouchMode="true"
                android:hint="@string/unit_price_txt"
                android:inputType="none"
                android:maxLength="@string/text_price_max_length"
                android:minWidth="@dimen/edit_text_price_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                android:visibility="invisible"
                tools:text="4.25"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bundle_price_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bundle_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_bundle_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="@string/bundle_price_txt"
                android:inputType="numberDecimal"
                android:maxLength="@string/text_price_max_length"
                android:minWidth="@dimen/edit_text_price_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/translated_bundle_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:paddingBottom="@dimen/edit_text_padding_bottom"
            android:paddingTop="@dimen/edit_text_padding_top"
            android:visibility="invisible"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_translated_bundle_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusableInTouchMode="true"
                android:hint="@string/unit_price_txt"
                android:inputType="none"
                android:maxLength="@string/text_price_max_length"
                android:minWidth="@dimen/edit_text_price_min_width"
                android:textAppearance="?android:textAppearanceMedium"
                android:visibility="invisible"
                tools:text="4.25"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bundle_qty_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:paddingBottom="@dimen/edit_text_padding_bottom"
        android:paddingTop="@dimen/edit_text_padding_top"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_bundle_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/bundle_quantity_txt"
            android:inputType="numberDecimal"
            android:maxLength="@string/text_bundle_qty_length"
            android:minWidth="@dimen/edit_text_bundle_qty_min_width"
            android:textAppearance="?android:textAppearanceMedium"
            />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>