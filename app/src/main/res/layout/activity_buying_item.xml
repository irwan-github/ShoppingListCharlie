<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_surface_margin"
            android:background="#fff"
            android:elevation="4dp"
            >
            <include layout="@layout/item_image_editor" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_surface_margin"
            android:background="#fff"
            android:elevation="4dp"
            >
            <include layout="@layout/item_editing" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_surface_margin"
            android:layout_marginTop="@dimen/edit_surface_margin"
            android:background="#fff"
            android:elevation="4dp"
            >
            <include layout="@layout/purchase_details" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_surface_margin"
            android:layout_marginTop="@dimen/edit_surface_margin"
            android:background="#fff"
            android:elevation="4dp"
            >
            <include layout="@layout/price_editing"/>
        </FrameLayout>
    </LinearLayout>

</ScrollView>