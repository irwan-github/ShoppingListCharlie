<?xml version="1.0" encoding="utf-8"?>
<!-- a Button widget can exist in one of several different states (pressed, focused, or neither) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Each color is defined in an <item> element -->

        <item
                android:state_checked="true"
                >
                <bitmap android:src="@drawable/ic_expand_less" android:gravity="center" />
        </item>

        <item
                android:state_checked="false"
                >
                <bitmap android:src="@drawable/ic_expand_more" android:gravity="center" />
        </item>
</selector>