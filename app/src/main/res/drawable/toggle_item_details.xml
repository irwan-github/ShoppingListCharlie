<?xml version="1.0" encoding="utf-8"?>
<!-- a Button widget can exist in one of several different states (pressed, focused, or neither) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Each color is defined in an <item> element -->
        <item
                android:drawable="@drawable/ic_expand_less"
                android:state_checked="true" />
        <item
                android:drawable="@drawable/ic_expand_more"
                android:state_checked="false" />
</selector>