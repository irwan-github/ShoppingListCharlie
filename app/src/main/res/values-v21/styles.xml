<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="AppTheme" parent="AppTheme.Base">
                <!-- enable window content transitions -->
                <item name="android:windowActivityTransitions">true</item>
        </style>

        <style name="AppTheme.Home">
                <!-- enable window content transitions -->
                <item name="android:windowActivityTransitions">true</item>
                <item name="android:windowExitTransition">@transition/main_screen_slide_out_right</item>
                <item name="android:windowReenterTransition">@transition/main_screen_slide_in_left</item>
        </style>

        <style name="AppTheme.Details">
                <!-- enable window content transitions -->
                <item name="android:windowActivityTransitions">true</item>
                <item name="android:windowEnterTransition">@transition/screen_slide_in_left</item>
                <item name="android:windowReturnTransition">@transition/screen_slide_out_right</item>

        </style>
</resources>